{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "trail.json",
  "type": "object",
  "additionalProperties": false,
  "title": "Trail schema",
  "required": ["trailCode", "name", "desc", "length", "trailSections"],
  "properties": {
    "trailCode": {
      "description": "Unique identifier for trail",
      "type": "string",
      "enum": ["pct", "at", "cdt", "ct", "azt", "pnt"]
    },
    "name": {
      "type": "string",
      "description": "Common name for trail"
    },
    "desc": {
      "type": "string",
      "description": "longer description of trail"
    },
    "length": {
      "type": "object",
      "description": "length of trail",
      "additionalProperties": false,
      "required": ["miles"],
      "properties": {
        "miles": {
          "type": "number",
          "minimum": 0,
          "maximum": 5000
        },
        "kilometers": {
          "type": "number",
          "minimum": 0,
          "maximum": 8000
        }
      }
    },
    "trailSections": {
      "type": "array",
      "items": {
        "description": "identifier of TrailSection",
        "type": "string"
      }
    }
  }
}
