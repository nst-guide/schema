{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "common.json",
  "definitions": {
    "Address": {
      "type": "object",
      "properties": {
        "housenumber": {
          "type": "string"
        },
        "street": {
          "type": "string"
        },
        "flats": {
          "description": "OSM way of saying 'address line 2'",
          "type": "string"
        },
        "postcode": {
          "description": "zip code",
          "type": "string",
          "pattern": "^\\d{5}(-\\d{4})?$"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        }
      }
    },
    "Comment": {
      "type": "object",
      "required": ["userId", "userName", "body", "date"],
      "properties": {
        "userId": {
          "type": "string"
        },
        "userName": {
          "$ref": "#/definitions/userName"
        },
        "body": {
          "type": "string"
        },
        "direction": {
          "description": "direction of travel. true means 'northbound' where northbound is usually defined as south to north, but could be defined as the 'standard' way for an east-west facing trail, like the Colorado Trail",
          "type": "string",
          "enum": ["north", "south"]
        },
        "date": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "FeedbackVote": {
      "type": "object",
      "required": ["userId", "date"],
      "properties": {
        "userId": {
          "type": "string"
        },
        "upvote": {
          "type": "boolean"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "GeoPoint": {
      "type": "object",
      "required": ["latitude", "longitude"],
      "properties": {
        "__type": {
          "type": "string",
          "enum": ["GeoPoint"]
        },
        "latitude": {
          "type": "number",
          "description": "Min/Max are bbox of US (all 50 states)",
          "minimum": 18.91619,
          "maximum": 71.3577635769
        },
        "longitude": {
          "type": "number",
          "description": "Min/Max are bbox of US (all 50 states)",
          "minimum": -171.791110603,
          "maximum": -66.96466
        }
      }
    },
    "userName": {
      "description": "userName may only contain URL-permitted chars",
      "type": "string",
      "pattern": "^[a-zA-Z0-9-_~]+$"
    }
  }
}
