{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "common.json",
  "definitions": {
    "Address": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "housenumber": {
          "type": "string"
        },
        "street": {
          "type": "string"
        },
        "flats": {
          "description": "OSM way of saying 'address line 2'",
          "type": "string"
        },
        "postcode": {
          "description": "zip code",
          "type": "string",
          "pattern": "^\\d{5}(-\\d{4})?$"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string",
          "pattern": "^(CA|OR|WA)$"
        }
      }
    },
    "Comment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["userId", "userName", "body", "date"],
      "properties": {
        "userId": {
          "type": "string"
        },
        "userName": {
          "$ref": "#/definitions/userName"
        },
        "body": {
          "type": "string"
        },
        "direction": {
          "description": "direction of travel. true means 'northbound' where northbound is usually defined as south to north, but could be defined as the 'standard' way for an east-west facing trail, like the Colorado Trail",
          "type": "string",
          "enum": ["north", "south"]
        },
        "date": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "FeedbackVote": {
      "type": "object",
      "additionalProperties": false,
      "required": ["userId", "up", "date"],
      "properties": {
        "userId": {
          "type": "string"
        },
        "up": {
          "type": "boolean"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "ParseDate": {
      "type": "object",
      "additionalProperties": false,
      "required": ["__type", "iso"],
      "properties": {
        "__type": {
          "type": "string",
          "enum": ["Date"]
        },
        "iso": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "ParseFile": {
      "type": "object",
      "additionalProperties": false,
      "required": ["__type", "name", "url"],
      "properties": {
        "__type": {
          "type": "string",
          "enum": ["File"]
        },
        "name": {
          "type": "string",
          "description": "The name of the uploaded file in Parse.",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}-"
        },
        "url": {
          "type": "string",
          "description": "Min/Max are bbox of US (all 50 states)",
          "format": "uri"
        }
      }
    },
    "ParseGeoPoint": {
      "type": "object",
      "additionalProperties": false,
      "required": ["__type", "latitude", "longitude"],
      "properties": {
        "__type": {
          "type": "string",
          "enum": ["GeoPoint"]
        },
        "latitude": {
          "type": "number",
          "description": "Min/Max are bbox of US (all 50 states)",
          "minimum": 18.91619,
          "maximum": 71.3577635769
        },
        "longitude": {
          "type": "number",
          "description": "Min/Max are bbox of US (all 50 states)",
          "minimum": -171.791110603,
          "maximum": -66.96466
        }
      }
    },
    "ParsePointerTown": {
      "type": "object",
      "additionalProperties": false,
      "required": ["__type", "className", "objectId"],
      "properties": {
        "__type": {
          "type": "string",
          "enum": ["Pointer"]
        },
        "className": {
          "type": "string",
          "enum": ["Town"]
        },
        "objectId": {
          "type": "string"
        }
      }
    },
    "ParsePointerTrail": {
      "type": "object",
      "additionalProperties": false,
      "required": ["__type", "className", "objectId"],
      "properties": {
        "__type": {
          "type": "string",
          "enum": ["Pointer"]
        },
        "className": {
          "type": "string",
          "enum": ["Trail"]
        },
        "objectId": {
          "type": "string"
        }
      }
    },
    "ParsePointerTrailSection": {
      "type": "object",
      "additionalProperties": false,
      "required": ["__type", "className", "objectId"],
      "properties": {
        "__type": {
          "type": "string",
          "enum": ["Pointer"]
        },
        "className": {
          "type": "string",
          "enum": ["TrailSection"]
        },
        "objectId": {
          "type": "string"
        }
      }
    },
    "ParseRelation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["__type", "className"],
      "properties": {
        "__type": {
          "type": "string",
          "enum": ["Pointer"]
        },
        "className": {
          "type": "string",
          "enum": [
            "Town",
            "TownWaypoint",
            "Trail",
            "TrailSection",
            "TrailWaypoint",
            "_User"
          ]
        }
      }
    },
    "userName": {
      "description": "userName may only contain URL-permitted chars",
      "type": "string",
      "pattern": "^[a-zA-Z0-9-_~]+$"
    }
  }
}
