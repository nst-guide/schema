{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "user.json",
  "type": "object",
  "additionalProperties": false,
  "title": "User schema",
  "required": ["userName", "email", "password", "units", "locationHistory"],
  "properties": {
    "userName": {
      "$ref": "common.json#/definitions/userName"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "description": "password, minimum length of 8 characters",
      "type": "string",
      "minLength": 8
    },
    "units": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "distance": {
          "type": "string",
          "enum": ["metric", "imperial", "both"]
        },
        "temperature": {
          "type": "string",
          "enum": ["metric", "imperial", "both"]
        }
      }
    },
    "social": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "facebook": {
          "type": "string"
        },
        "twitter": {
          "type": "string"
        },
        "youtube": {
          "type": "string"
        },
        "instagram": {
          "type": "string"
        },
        "reddit": {
          "type": "string"
        }
      }
    },
    "locationHistory": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["date", "location"],
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "location": {
            "$ref": "common.json#/definitions/ParseGeoPoint"
          }
        }
      }
    },
    "avatar": {
      "$ref": "common.json#/definitions/ParseFile"
    }
  }
}
