{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "town.json",
  "type": "object",
  "additionalProperties": false,
  "title": "Town schema",
  "required": [
    "id",
    "name",
    "type",
    "centroid",
    "trails",
    "feedback",
    "elevation"
  ],
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier for town"
    },
    "name": {
      "type": "string",
      "description": "Common name for town"
    },
    "type": {
      "$ref": "#/definitions/TownType"
    },
    "centroid": {
      "$ref": "common.json#/definitions/GeoPoint"
    },
    "geometry": {
      "type": "string"
    },
    "trails": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["pct", "cdt", "at", "azt", "jmt", "pnt", "ct"]
      }
    },
    "feedback": {
      "$ref": "#/definitions/TownFeedback"
    },
    "elevation": {
      "description": "Elevation in meters of town centroid. Min/max are of continental US",
      "type": "number",
      "minimum": -87,
      "maximum": 4500
    }
  },
  "definitions": {
    "TownType": {
      "type": "string",
      "enum": ["city", "resort"]
    },
    "TownFeedback": {
      "type": "array",
      "items": {
        "$ref": "common.json#/definitions/Comment"
      }
    }
  }
}
